#include <dt-bindings/zmk/matrix_transform.h>

/ {
    esb_split {
        compatible = "zmk,esb-split";
        base-addr-0 = <0xE7 0xE7 0xE7 0xE7>;
        base-addr-1 = <0xC2 0xC2 0xC2 0xC2>;
        addr-prefix = <0xE7 0xC2 0xC3 0xC4 0xC5 0xC6 0xC7 0xC8>;
    };
    chosen {
        zmk,kscan = &kscan0;
        zmk,split = &split;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: default_transform {
        compatible = "zmk,matrix-transform";
        columns = <18>;
        rows = <8>;
        map = <
                            RC(0,2) RC(0,3) RC(0,4)                     RC(0,10) RC(0,11) RC(0,12)
                    RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)     RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)     RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13) RC(2,14)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)     RC(3,9) RC(3,10) RC(3,11) RC(3,12) RC(3,13) RC(3,14)

                                    RC(4,6) RC(6,6)                      RC(5,15) RC(7,15)
                                         RC(5,6) RC(7,6)             RC(4,15) RC(6,15)
                                    RC(4,7) RC(6,7) RC(7,7)     RC(4,16) RC(5,16) RC(7,16)
                                         RC(5,8) RC(7,8)             RC(4,17) RC(6,17)
                                    RC(4,8) RC(6,8)                      RC(5,17) RC(7,17)
        >;
    };
    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
        wakeup-source;
    };

    soft_off_wakers {
        compatible = "zmk,soft-off-wakeup-sources";
        wakeup-sources = <&kscan0>;
    };

    split: split {
        compatible = "zmk,split";
    };

    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        mouse_split: mouse_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    mouse_listener: mouse_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&mouse_split>;
    };
};
